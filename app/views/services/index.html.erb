<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Url</th>
      <th>Text on page</th>
      <th>Number of occurrences</th>
      <th>Load waiting sec</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td>
          <% if service.currently_up?%>
             <span class="badge badge-success">UP</span></td>
            <% else %>
            <span class="badge badge-danger">DOWN</span></td>
        <% end %>
        </td>
        <td><%= service.name %></td>
        <td><%= service.url %></td>
        <td><%= service.text_on_page %></td>
        <td><%= service.number_of_occurrences %></td>
        <td><%= service.load_waiting_sec %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

